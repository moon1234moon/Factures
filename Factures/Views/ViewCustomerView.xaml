<UserControl x:Class="Factures.Views.ViewCustomerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Factures.Views"
             xmlns:cal="http://www.caliburnproject.org"
             FontFamily="Times New Roman" FontSize="14"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        
        <!-- Row 1 -->
        <!-- Row 1 / Column 1 -->
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>

            <!-- Row 1 / Row 1 -->
            <!-- First Set (Columns All) -->
            <TextBlock Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
                   Margin="10,10,10,10"
                   FontWeight="Bold"
                   FontSize="25"
                   Text="{Binding CustomerName, Mode=OneWay}" />
            <!-- Row 1 / Row 2-->
            <!-- First Set (Columns All) -->
            <DataGrid AlternatingRowBackground="Gray" 
                  Grid.Column="0" Grid.Row="2"
                  x:Name="Customer"
                  ItemsSource="{Binding CustomerBound}"
                  CanUserAddRows="False" 
                  MinHeight="50" 
                  FontFamily="Times New Roman"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Path=Id}" />
                    <DataGridTextColumn Header="Name" Binding="{Binding Path=Name}" />
                    <DataGridTextColumn Header="Customer Type" Binding="{Binding Path=TypeName}" />
                    <DataGridTextColumn Header="Phone" Binding="{Binding Path=Phone}" />
                    <DataGridTextColumn Header="Email" Binding="{Binding Path=Email}" />
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
        <!-- Row 1 / Column 2 -->
        <Grid Grid.Column="2" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>

            <!-- Row 2 / Row 1 -->
            <!-- First Set (Columns 1 & 2) -->
            <TextBlock Grid.Column="0" Grid.Row="1"
                   Margin="10,10,10,10"
                   FontWeight="Bold"
                   FontSize="25"
                   Text="Products: " />
            <Button Grid.Column="1" Grid.Row="1" 
                    Height="25"
                    Margin="10"
                    Width="100"
                    x:Name="CreateProduct">
                New Product
            </Button>

            <!-- Row 2 / Row 2-->
            <!-- First Set (Columns 1 & 2) -->
            <DataGrid AlternatingRowBackground="Gray" 
                  Grid.Column="0" Grid.Row="2"
                  Grid.ColumnSpan="2"
                  x:Name="Products"
                  ItemsSource="{Binding Products}"
                  CanUserAddRows="False" 
                  MinWidth="100" MinHeight="50" 
                  FontFamily="Times New Roman"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Path=Id}" />
                    <DataGridTextColumn Header="Name" Binding="{Binding Path=Name}" />
                    <DataGridTextColumn Header="Details" Binding="{Binding Path=Details}" />
                    <DataGridTextColumn Header="Price" Binding="{Binding Path=FullPrice}" />
                    <DataGridTemplateColumn Header="View">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="BtnView"
                                    cal:Message.Attach="[Event Click]=[ViewProduct($dataContext)]"
                                    Content="View"></Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="View">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="BtnEdit"
                                    cal:Message.Attach="[Event Click]=[EditProduct($dataContext)]"
                                    Content="Edit"></Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Row 2 -->
        <!-- Row 2 / Column 1 -->
        <Grid Grid.Column="1" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>

            <!-- Row 3 / Row 1 -->
            <!-- First Set (Columns 1 & 2) -->
            <TextBlock Grid.Column="0" Grid.Row="1"
                   Margin="10,10,10,10"
                   FontWeight="Bold"
                   FontSize="25"
                   Text="Factures: " />
            <Button Grid.Column="1" Grid.Row="1" 
                    Height="25"
                    Margin="10"
                    Width="100"
                    x:Name="CreateFacture">
                New Facture
            </Button>

            <!-- Row 3 / Row 2-->
            <Grid Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0"
                   Margin="0, 0, 20, 0"
                   FontSize="20"
                   Text="Filters:" />

                <TextBlock Grid.Column="1" Grid.Row="1"
                   Margin="2" FontSize="15"
                   Text="Number: " />
                <TextBox Grid.Column="2" Grid.Row="0"
                               x:Name="Number"
                               Margin="2"
                               MinWidth="75"
                               Text="{Binding Path=FactureNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Column="3" Grid.Row="1"
                   Margin="2" FontSize="15"
                   Text="Type: " />
                <ComboBox Grid.Column="4" Grid.Row="0"
                              ItemsSource="{Binding FactureTypes}"  
                              Margin="2"
                              MinWidth="75"
                              SelectedItem="{Binding FactureType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                </ComboBox>

                <TextBlock Grid.Column="5" Grid.Row="1"
                   Margin="2" FontSize="15"
                   Text="Season: " />
                <ComboBox Grid.Column="6" Grid.Row="0"
                              ItemsSource="{Binding Seasons}"  
                              Margin="2"
                              MinWidth="75"
                              SelectedItem="{Binding FacturesSeason, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Year}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>

            <!-- Row 3 / Row 3-->
            <!-- First Set (Columns 1 & 2) -->
            <DataGrid AlternatingRowBackground="Gray" 
                  Grid.Column="0" Grid.Row="3"
                  Grid.ColumnSpan="4"
                  x:Name="Factures"
                  ItemsSource="{Binding Factures}"
                  CanUserAddRows="False" 
                  MinWidth="100" MinHeight="50" 
                  FontFamily="Times New Roman"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Path=Id}" />
                    <DataGridTextColumn Header="Number" Binding="{Binding Path=Number}" />
                    <DataGridTextColumn Header="Name" Binding="{Binding Path=Name}" />
                    <DataGridTextColumn Header="Season" Binding="{Binding Path=SeasonYear}" />
                    <DataGridTextColumn Header="Cleared" Binding="{Binding Path=Cleared}" />
                    <DataGridTextColumn Header="Delivery Date" Binding="{Binding Path=Delivery}" />
                    <DataGridTemplateColumn Header="View">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="ViewFacture"
                                    cal:Message.Attach="[Event Click]=[ViewFacture($dataContext)]"
                                    Content="View"></Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <!-- Row 2 / Column 2 -->
        <Grid Grid.Column="2" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>

            <!-- Row 4 / Row 1 -->
            <!-- First Set (Columns 1 & 2) -->
            <TextBlock Grid.Column="0" Grid.Row="1"
                   Margin="10,10,10,10"
                   FontWeight="Bold"
                   FontSize="25"
                   Text="Receipts: " />
            <Button Grid.Column="1" Grid.Row="1" 
                    Height="25"
                    Margin="10"
                    Width="100"
                    x:Name="CreateReceipt">
                New Receipt
            </Button>

            <!-- Row 4 / Row 2-->
            <Grid Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0"
                   Margin="0, 0, 20, 0"
                   FontSize="20"
                   Text="Filters:" />

                <TextBlock Grid.Column="1" Grid.Row="1"
                   Margin="2" FontSize="15"
                   Text="Number: " />
                <TextBox Grid.Column="2" Grid.Row="0"
                               x:Name="ReciptNumber"
                               Margin="2"
                               MinWidth="75"
                               Text="{Binding Path=ReceiptNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Column="3" Grid.Row="1"
                   Margin="2" FontSize="15"
                   Text="Season: " />
                <ComboBox Grid.Column="4" Grid.Row="0"
                              ItemsSource="{Binding Seasons}"  
                              Margin="2"
                              MinWidth="75"
                              SelectedItem="{Binding ReceiptSeason, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Year}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>

            <!-- Row 4 / Row 3-->
            <!-- First Set (Columns 1 & 2) -->
            <DataGrid AlternatingRowBackground="Gray" 
                  Grid.Column="0" Grid.Row="3"
                  Grid.ColumnSpan="2"
                  x:Name="Receipts"
                  ItemsSource="{Binding Receipts}"
                  CanUserAddRows="False" 
                  MinWidth="100" MinHeight="50" 
                  FontFamily="Times New Roman"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Path=Id}" />
                    <DataGridTextColumn Header="Number" Binding="{Binding Path=Number}" />
                    <DataGridTextColumn Header="Season" Binding="{Binding Path=SeasonYear}" />
                    <DataGridTextColumn Header="Delivery Date" Binding="{Binding Path=Delivery}" />
                    <DataGridTextColumn Header="Facture" Binding="{Binding Path=Facture}" />
                    <DataGridTemplateColumn Header="View">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="ViewReceipt"
                                    cal:Message.Attach="[Event Click]=[ViewReceipt($dataContext)]"
                                    Content="View"></Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Row 1 and 2 / Column 3 -->
        <Grid Grid.Column="3" Grid.Row="1" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>

            <!-- Row 5 / Row 1 -->
            <!-- First Set (Columns 1 & 2) -->
            <TextBlock Grid.Column="0" Grid.Row="1"
                   Margin="10,10,10,10"
                   FontWeight="Bold"
                   FontSize="25"
                   Text="Balance: " />

            <!-- Row 5 / Row 2 -->
            <Grid Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0"
                   Margin="0, 0, 20, 0"
                   FontSize="20"
                   Text="Filters:" />

                <TextBlock Grid.Column="1" Grid.Row="0"
                   Margin="2" FontSize="15"
                   Text="Season: " />
                <ComboBox Grid.Column="2" Grid.Row="0"
                              ItemsSource="{Binding Seasons}"  
                              Margin="2"
                              MinWidth="75"
                              SelectedItem="{Binding BalanceSeason, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Year}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Grid.Column="3" Grid.Row="0"
                   Margin="2" FontSize="15"
                   Text="Currency: " />
                <ComboBox Grid.Column="4" Grid.Row="0"
                              ItemsSource="{Binding Currencies}"  
                              Margin="2"
                              MinWidth="75"
                              SelectedItem="{Binding BalanceCurrency, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Symbol}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Button Grid.Column="5" Grid.Row="1" 
                    Height="25"
                    Margin="10"
                    MinWidth="100"
                    x:Name="ComputeBalance">
                    Compute Balance
                </Button>
            </Grid>
        </Grid>

        <!-- Row 3 / Column ALL -->
        <ContentControl Grid.Column="1" Grid.Row="3"  Grid.ColumnSpan="3"
                        x:Name="ActiveItem"
                        Margin="30, 150, 30, 30"
                        />
    </Grid>
</UserControl>
